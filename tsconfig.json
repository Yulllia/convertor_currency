{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2016",                                  
    "module": "commonjs",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": false,                                                 
    "skipLibCheck": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true                             
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"] 
}
